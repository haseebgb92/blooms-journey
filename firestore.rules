
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Users can read and write to subcollections within their own user document
      match /{collection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Community chat - allow authenticated users to read and write
    // We'll handle gender restrictions in the application logic
    match /communityChat/{messageId} {
      allow read, write: if request.auth != null;
    }

    // Reviews - allow authenticated users to read and write
    match /reviews/{reviewId} {
      allow read, write: if request.auth != null;
    }
  }
}
